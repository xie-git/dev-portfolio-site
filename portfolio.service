[Unit]
Description=Michael Xie Portfolio Website
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/xie/dev-portfolio-site
Environment=PATH=/home/xie/dev-portfolio-site/venv/bin
ExecStart=/home/xie/dev-portfolio-site/venv/bin/python /home/xie/dev-portfolio-site/run.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 